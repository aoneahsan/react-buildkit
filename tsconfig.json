{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",

		"baseUrl": "./",
		"paths": {
			"@utils/*": ["./src/utils/*"],
			"@enums/*": ["./src/enums/*"],
			"@src/*": ["./src/*"]
		},

		"types": ["vitest/globals", "vitest/importMeta"],

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,

		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"jsx": "react-jsx",

		"skipLibCheck": true /* Skip type checking all .d.ts files. */
	},
	"compileOnSave": true,
	"exclude": ["node_modules", ".history", "*ignore*", ".vscode", ".git"],
	"include": ["./src", "./tests"]
}
